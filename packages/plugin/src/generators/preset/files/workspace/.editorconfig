# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = true
end_of_line = lf

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[MakeHelp]
charset = utf-8
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

[Makefile]
charset = utf-8
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true
